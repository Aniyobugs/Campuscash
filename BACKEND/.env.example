# Example .env for BACKEND
# MongoDB connection string (Atlas recommended)
mongodb_url=mongodb+srv://<user>:<password>@cluster0.mongodb.net/campuscash?retryWrites=true&w=majority

# JWT secret (set a secure random value in production)
SECRET_KEY=replace_with_secure_random

# INR per point (default 50/150 -> ~0.3333333)
POINT_VALUE_INR=0.3333333

# Comma-separated allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:4000,http://localhost:5173,https://campuscash-pink.vercel.app

# Optional: set PORT if not provided by the host
PORT=3000
